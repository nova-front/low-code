{
  "name": "@nova-fe/editor",
  "version": "1.0.2",
  "description": "支持英语拼写检查文本输入框, 5w+字符实时编辑。",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "biome format --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@rsbuild/plugin-react": "^1.3.1",
    "@rslib/core": "^0.8.0",
    "@types/html-to-text": "^9.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.1.0",
    "@types/typo-js": "^1.2.2",
    "react": "^19.1.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "dependencies": {
    "html-to-text": "^9.0.5",
    "lodash-es": "^4.17.21",
    "typo-js": "^1.2.5",
    "use-undo": "^1.1.1"
  },
  "keywords": [
    "editor",
    "spellcheck",
    "富文本",
    "typo-js"
  ],
  "publishConfig": {
    "access": "public"
  }
}
