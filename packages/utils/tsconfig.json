{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "declaration": false, // 由rollup-plugin-dts处理
    "outDir": null,       // 禁用默认输出
    "types": ["jest", "@types/jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "exclude": ["dist"],     // 忽略构建目录 
}